<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/home-base.css ">
    <link rel="stylesheet" href="/css/home-main.css ">
    <link rel="stylesheet" href="/css/product.css">
</head>
<img class="img-title" src="/img/dang-mua.png">
<div class="laptopshock">
    <div class="row">
        <div class="grid__column-2-4">
            <div class="card" style="width: 100%; height: 320px;">
                <a href="/laptop/hp-348-g7-i3-8130u-1a0z1pa" class="product-image">
                    <img src="https://cdn.tgdd.vn/Products/Images/44/225549/hp-348-g7-i3-1a0z1pa-1-225549-600x600.jpg" class="card-img-top product-img" alt="...">
                </a>
                <div class="card-body">
                    <a href="/laptops/hp-348-g7-i3-8130u-1a0z1pa">
                        <h5 class="card-title product-name">HP 348 G7 i3 8130U (1A0Z1PA)</h5>
                    </a>
                    <div class="props">
                        <span>RAM 4GB</span>
                        <span>Ổ CỨNG SSD 256GB</span>
                    </div>
                    <div class="price">
                        <strong>11,990,000₫</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="row">
        {{#each laptops}}
        <div class="grid__column-2-4 mt-2">
            <div class="card" style="width: 100%;" onclick="window.location='/laptop/{{this.slug}}'">
                <a  class="product-image">
                    <img src="{{this.img}}" class="card-img-top product-img" alt="...">
                </a>
                <div class="card-body">
                    <a>
                        <h5 class="card-title product-name">{{this.laptop_name}}</h5>
                    </a>

                    <div class="props">
                        <span>RAM {{this.ram}}</span>
                        <span>Ổ CỨNG {{this.hard_drive}}</span>
                    </div>

                    <div class="price">
                        <strong>{{this.price}}₫</strong>
                    </div>
{{!-- 
                    <a href="/laptops/{{this.slug}}" class="btn btn-primary btn-product" style = "font-size: 1.2em;">Xem chi tiết</a>
                    <a href="/cart/add/{{this.id}}" class="btn btn-primary btn-cart" style = "font-size: 1.2em;">Add to cart</a> --}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>