<div class="mt-4 container">
    <div class="">
        <h3>Thùng rác</h3>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Khách Hàng</th>
                <th>Điện Thoại</th>
                <th>Tổng Tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.customer_name}}</td>
                <td>{{this.sdt}}</td>
                <td>{{this.total_price}}</td>
                <td>
                    <a href="/admin/order/{{this.order_id}}/restore" class="btn btn-link btn-restore" data-id="{{this.order_id}}">Khôi phục</a>
                    <a href="#" class="btn btn-link" data-toggle="modal" data-target="#{{this.order_id}}"
                        data-id="{{this.order_id}}">Xóa vĩnh viễn</a>
                </td>

                {{!-- Confirm Delete Laptop --}}
                <div class="modal" id="{{this.order_id}}" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Xóa đơn hàng này?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Bạn chắc chắn muốn xóa vĩnh viễn đơn hàng này này?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                                <button onclick="window.location.href = '/admin/order/{{this.order_id}}/force' " id="btn-delete-laptop" type="button" class="btn btn-primary">Xóa vĩnh viễn</button>
                            </div>
                        </div>
                    </div>
                </div>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center">
                    Thùng rác trống.
                    <a href="/admin/order">Danh sách đơn hàng</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
