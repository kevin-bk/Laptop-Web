<link rel="stylesheet" type="text/css" href="/css/admin/datatables.min.css" />

<div class="card-body">
    <table id="example" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Khách Hàng</th>
                <th>Điện Thoại</th>
                {{!-- <th>Địa Chỉ</th> --}}
                <th>Tổng Tiền</th>
                <th>Trạng thái đơn hàng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{sum @index 1}}</td>
                <td>{{this.customer_name}}</td>
                <td>{{this.sdt}}</td>
                {{!-- <td>{{this.address}}</td> --}}
                <td>{{this.total_price}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a href="/admin/order/detail/{{this.order_id}}" class="btn btn-link">Xem</a>
                    <a href="#" class="btn btn-link" data-toggle="modal" data-target="#{{this.order_id}}"
                        data-id="{{this.order_id}}">Xóa</a>
                </td>
                {{!-- Confirm Delete Laptop --}}
                <div class="modal" id="{{this.order_id}}" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Xóa đơn hàng này?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Bạn chắc chắn muốn xóa đơn hàng này?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                                <button onclick="window.location.href = '/admin/order/delete/{{this.order_id}}' " id="btn-delete-laptop" type="button" class="btn btn-primary">Xóa bỏ</button>
                            </div>
                        </div>
                    </div>
                </div>

            </tr>
            {{else}}
            <tr>
                <td colspan="6" class="text-center">
                    Chưa có đơn hàng nào.
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
