<div class="mt-4 container">
    <h3>Thêm sản phẩm</h3>
    <form method="POST" action="/admin/laptop/store" name="create-form">
        <div class="" style="display:flex;">
            <div class="form-group" style="width: 45%;">
                <label for="laptop_name">Tên Laptop</label>
                <input type="text" class="form-control" value="{{laptop.laptop_name}}" id="laptop_name"
                    name="laptop_name">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="brand">Hãng</label>
                <input type="text" class="form-control" value="Dell" id="brand" name="brand">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="price">Giá</label>
                <input type="text" class="form-control" value="{{laptop.price}}" id="price" name="price">
            </div>
        </div>

        <div class="" style="display:flex;">
            <div class="form-group " style="width: 20%;">
                <label for="cpu">CPU</label>
                <input type="text" class="form-control" value="Intel Core i3 Coffee Lake" id="cpu" name="cpu">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="cpu_speed">Tốc độ CPU</label>
                <input type="text" class="form-control" value="2.20Ghz" id="cpu_speed" name="cpu_speed">
            </div>
        </div>

        <div class="" style="display:flex;">
            <div class="form-group" style="width: 20%;">
                <label for="ram">RAM</label>
                <input type="text" class="form-control" value="8GB" id="ram" name="ram">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="ram_type">Loại RAM</label>
                <input type="text" class="form-control" value="DDR4 (On board 4GB +1 khe 4GB)" id="ram_type" name="ram_type">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="ram_speed">Tốc độ bus RAM</label>
                <input type="text" class="form-control" value="2666 Mhz" id="ram_speed" name="ram_speed">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="ram_max">RAM tối đa</label>
                <input type="text" class="form-control" value="32Gb" id="ram_max" name="ram_max">
            </div>
        </div>

        {{!-- --}}
        <div class="" style="display:flex;">
            <div class="form-group" style="width: 20%;">
                <label for="hard_drive">Ổ cứng</label>
                <input type="text" class="form-control" value="SSD 128GB" id="hard_drive" name="hard_drive">
            </div>
            <div class="form-group ml-4 " style="width: 20%;">
                <label for="screen_size">Kích thước màn hình</label>
                <input type="text" class="form-control" value="15.6 inch" id="screen_size"
                    name="screen_size">
            </div>
            <div class="form-group ml-4 " style="width: 20%;">
                <label for="screen_relolution">Độ phân giải màn hình</label>
                <input type="text" class="form-control" value="Full HD (1920 x 1080)" id="screen_relolution"
                    name="screen_relolution">
            </div>
            <div class="form-group ml-4 " style="width: 20%;">
                <label for="card">Card đồ họa</label>
                <input type="text" class="form-control" value="NVIDIA GeForce MX230 2GB" id="card" name="card">
            </div>
        </div>

        {{!-- --}}
        <div class="" style="display:flex;">
            <div class="form-group" style="width: 20%;">
                <label for="sound">Công nghệ âm thanh</label>
                <input type="text" class="form-control" value="Realtek High Definition Audio" id="sound" name="sound">
            </div>
            <div class="form-group ml-4" style="width: 30%;">
                <label for="connect_port">Cổng kết nối</label>
                <input type="text" class="form-control" value="2 x USB 2.0, HDMI, LAN, UBS 3.0, USB type C" id="connect_port"
                    name="connect_port">
            </div>
            <div class="form-group ml-4" style="width: 32.5%;">
                <label for="wireless_connect">Kết nối không dây</label>
                <input type="text" class="form-control" value="Bluetooth 4.2, Wi-Fi 802.11 a/b/g/n/ac" id="wireless_connect"
                    name="wireless_connect">
            </div>
        </div>

        {{!-- --}}
        <div class="" style="display:flex;">
            <div class="form-group " style="width: 20%;">
                <label for="model_charge">Model sạc</label>
                <input type="text" class="form-control" value="AD20066020" id="model_charge"
                    name="model_charge">
            </div>
            <div class="form-group ml-4" style="width: 20%;">
                <label for="pin_type">Loại PIN</label>
                <input type="text" class="form-control" value="PIN liền" id="pin_type" name="pin_type">
            </div>
            <div class="form-group ml-4 " style="width: 20%;">
                <label for="os">Hệ điều hành</label>
                <input type="text" class="form-control" value="Windows 10 Home SL" id="os" name="os">
            </div>
            <div class="form-group ml-4 " style="width: 20%;">
                <label for="weight">Trọng lượng</label>
                <input type="text" class="form-control" value="1.5 kg" id="weight" name="weight">
            </div>
        </div>

        {{!-- --}}
        <div class="" style="display:flex;">
            <div class="form-group " style="width: 20%;">
                <label for="size">Kích thước</label>
                <input type="text" class="form-control" value="Dài 363.96 mm - Rộng 249 mm - Dày 19.9 mm" id="size" name="size">
            </div>

            <div class="form-group ml-4" style="width: 20%;">
                <label for="material">Chất liệu</label>
                <input type="text" class="form-control" value="Vỏ nhựa" id="material" name="material">
            </div>
            <div class="form-group ml-4 " style="width: 20%;">
                <label for="year">Thời điểm ra mắt</label>
                <input type="text" class="form-control" value="2020" id="year" name="year">
            </div>
        </div>

        <div class="form-group " style="width: 86.5%;">
            <label for="img">Link image</label>
            <input type="text" class="form-control" id="img" name="img">
        </div>

        {{!-- <div class="form-group w-50">
            <label for="image">Ảnh sản phẩm</label>
            <input type="file" class="form-control-file" id="image" name="image">
        </div> --}}
        <button type="submit" class="btn btn-primary mb-4">Thêm sản phẩm</button>
    </form>
</div>

<script>
    var create_form = document.forms['create-form'];
    var btn = $('.btn');
    btn.click(function (event) {
        event.preventDefault();
        var laptop_name = $('#laptop_name').val();
        var price = $('#price').val();
        if (!laptop_name) {
            window.alert("Chưa đặt tên laptop");
            return;
        }
        if (!price) $('#price').val(0);
        create_form.submit();
    })
</script>