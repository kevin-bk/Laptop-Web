<div class="mt-4 container">
    <div class="">
        <h3>Thùng rác</h3>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Laptop</th>
                <th>Hãng</th>
                <th>Giá</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each laptops}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.laptop_name}}</td>
                <td>{{this.brand}}</td>
                <td>{{this.price}}</td>
                <td>
                    <a href="/admin/laptop/{{this.slug}}/restore" class="btn btn-link btn-restore" data-id="{{this.slug}}">Khôi phục</a>
                    <a href="#" class="btn btn-link" data-toggle="modal" data-target="#{{this.slug}}"
                        data-id="{{this.slug}}">Xóa vĩnh viễn</a>
                </td>

                {{!-- Confirm Delete Laptop --}}
                <div class="modal" id="{{this.slug}}" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Xóa laptop này?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Bạn chắc chắn muốn xóa vĩnh viễn laptop này?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                                <button onclick="window.location.href = '/admin/laptop/{{this.slug}}/force' " id="btn-delete-laptop" type="button" class="btn btn-primary">Xóa vĩnh viễn</button>
                            </div>
                        </div>
                    </div>
                </div>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center">
                    Thùng rác trống.
                    <a href="/admin/laptop">Danh sách Laptop</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
